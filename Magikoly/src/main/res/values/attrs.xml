<resources>
    <declare-styleable name="CameraView">
        <!--
          Set this to true if you want the CameraView to adjust its bounds to preserve the aspect
          ratio of its camera preview.
        -->
        <attr name="android:adjustViewBounds"/>
        <!-- Direction the camera faces relative to device screen. -->
        <attr name="facing" format="enum">
            <enum name="back" value="0"/>
            <enum name="front" value="1"/>
        </attr>
        <!-- Aspect ratio of camera preview and pictures. -->
        <attr name="aspectRatio" format="string"/>
        <attr name="autoFocus" format="boolean"/>
        <attr name="flash" format="enum">
            <enum name="off" value="0"/>
            <enum name="on" value="1"/>
            <!--
              Constant emission of light during preview, auto-focus and snapshot.
              This can also be used for video recording.
            -->
            <enum name="torch" value="2"/>
            <enum name="auto" value="3"/>
            <enum name="redEye" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="PolygonChartView">
        <!--顶点数-->
        <attr name="numVertex" format="integer"/>
        <attr name="numLayers" format="integer"/>
        <attr name="radius" format="dimension|reference"/>
        <attr name="lineSpace" format="dimension|reference"/>
        <!--颜色相关-->
        <attr name="lineColor" format="color|reference"/>
        <attr name="netBackground" format="color|reference"/>
        <attr name="selectedAreaColorFrom" format="color|reference"/>
        <attr name="selectedAreaColorTo" format="color|reference"/>
        <attr name="selectedPointColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="FaceAutoFlowView">
        <attr name="flow_image" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ReportBackground">
        <attr name="imgTopLeft" format="reference"/>
        <attr name="imgTopRight" format="reference"/>
        <attr name="imgBottomLeft" format="reference"/>
        <attr name="imgBottomRight" format="reference"/>
    </declare-styleable>
    <declare-styleable name="BlurLayout">
        <attr name="blk_downscaleFactor" format="float"/>
        <attr name="blk_blurRadius" format="integer"/>
        <attr name="blk_fps" format="integer"/>
    </declare-styleable>


    <declare-styleable name="CustomRatingBar">
        <!--尺寸值-->
        <attr name="starImageSize" format="dimension"/>
        <!--星星间距-->
        <attr name="starPadding" format="dimension"/>
        <!--星星总数-->
        <attr name="starCount" format="integer"/>
        <!--空白的星星资源文件值-->
        <attr name="starEmpty" format="reference"/>
        <!--满星资源文件值-->
        <attr name="starFill" format="reference"/>
        <!--半星资源文件值-->
        <attr name="starHalf" format="reference"/>
        <!--是否可点击boolean值-->
        <attr name="clickable" format="boolean"/>
        <!--当前进度float值-->
        <attr name="starStep" format="float"/>
        <!--每次进度方式的值，整星还是半星-->
        <attr name="stepSize">
            <enum name="Half" value="0"/>
            <enum name="Full" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="RoundStackImageView">
        <attr name="radius_all" format="dimension"/>
        <attr name="radius_leftTop" format="dimension"/>
        <attr name="radius_leftBottom" format="dimension"/>
        <attr name="radius_rightTop" format="dimension"/>
        <attr name="radius_rightBottom" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ShimmerLayout">
        <attr name="shimmer_color" format="color|reference"/>
        <attr name="shimmer_animation_duration" format="integer|reference"/>
        <attr name="shimmer_auto_start" format="boolean|reference"/>
        <attr name="shimmer_angle" format="integer|reference"/>
        <attr name="shimmer_mask_width" format="float|reference"/>
        <attr name="shimmer_gradient_center_color_width" format="float|reference"/>
        <attr name="shimmer_reverse_animation" format="boolean|reference"/>
    </declare-styleable>

    <declare-styleable name="ShadowLayout">
        <attr name="sl_shadowed" format="boolean"/>
        <attr name="sl_shadow_distance" format="dimension"/>
        <attr name="sl_shadow_angle" format="integer"/>
        <attr name="sl_shadow_radius" format="dimension"/>
        <attr name="sl_shadow_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ImageComparedView">
        <attr name="icv_centerWidth" format="dimension|reference"/>
        <attr name="icv_centerHeight" format="dimension|reference"/>
        <attr name="icv_lineWidth" format="dimension|reference"/>
        <attr name="icv_lineColor" format="color|reference"/>
        <attr name="icv_centerDrawable" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RippleEffectView">
        <attr name="rev_rippleDuration" format="integer"/>
        <attr name="rev_rippleColor" format="color|reference"/>
        <attr name="rev_ripplePercentX" format="float"/>
        <attr name="rev_ripplePercentY" format="float"/>
        <attr name="rev_isRound" format="boolean"/>
    </declare-styleable>
</resources>
