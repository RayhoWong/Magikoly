<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/shape_round_corner_white"
        android:layout_width="312dp"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/dialog_cover"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:src="@drawable/dialog_watch_advideo_cover"
            android:layout_height="114dp"/>

    <TextView
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/dialog_cover"
            android:id="@+id/dialog_rate_title"
            android:layout_marginTop="18dp"
            android:textSize="18sp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:textColor="#21004d"
            android:text="@string/dialog_watch_video_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />

    <TextView
            android:id="@+id/dialog_rate_desc"
            android:textSize="14sp"
            android:textColor="#6e6d70"
            android:lineSpacingExtra="6dp"
            android:layout_marginTop="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_rate_title"
            android:text="@string/dialog_watch_video_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/dialog_rate_cancel"
            android:background="@drawable/dialog_btn_no_selector"
            android:layout_marginTop="18dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="12dp"
            android:text="@string/cancel"
            android:textColor="#a09fa3"
            app:layout_constraintRight_toLeftOf="@+id/dialog_rate_confirm"
            app:layout_constraintTop_toBottomOf="@+id/dialog_rate_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/dialog_rate_confirm"
            android:background="@drawable/dialog_btn_yes_selector"
            android:textColor="#6817fa"
            style="?android:attr/borderlessButtonStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="18dp"
            android:textStyle="bold"
            android:layout_marginRight="30dp"
            android:text="@string/ok"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_rate_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/dialog_pb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:src="@drawable/progressbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_cover"
        />

</android.support.constraint.ConstraintLayout>