<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ImageView
            android:id="@+id/img_vip"
            android:layout_width="48dp"
            android:layout_height="26dp"
            android:src="@drawable/function_item_vip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="14dp"
            android:visibility="gone"
    />
    <TextView
            android:id="@+id/txt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="Desc desc Desc desc Desc desc Desc desc Desc desc Desc desc Desc desc"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="#747176"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
    />
    <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_above="@id/txt_desc"
            android:text="Title title"
            android:maxLines="1"
            android:textSize="20sp"
            android:textColor="#21004d"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="14dp"
            android:textStyle="bold"
    />
</RelativeLayout>