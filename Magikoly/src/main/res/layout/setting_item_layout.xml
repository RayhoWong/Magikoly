<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/setting_item_click_selector">

    <ImageView
            android:id="@+id/setting_item_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/setting_vip"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/setting_item_title"
            android:visibility="visible"/>

    <TextView
            android:id="@+id/setting_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/setting_item_upgrade"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/setting_item_image"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="sans-serif"
            android:textColor="@color/toolbar_title_dark_color"
            android:textSize="@dimen/setting_item_title_size"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            app:layout_goneMarginRight="24dp"
            app:layout_goneMarginStart="24dp"/>

    <View
            android:id="@+id/setting_item_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#1a746d78"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/setting_item_title"
            android:visibility="visible"/>
</android.support.constraint.ConstraintLayout>