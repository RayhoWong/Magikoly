<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.glt.magikoly.download.TestDownloadActivity"
    android:padding="10dp">


    <ProgressBar
        android:id="@+id/progress1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintLeft_toRightOf="@id/progress1"
        app:layout_constraintTop_toTopOf="@id/progress1"
        />


    <ProgressBar
        android:id="@+id/progress2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"

        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress1"
        />

    <TextView
        android:id="@+id/tv_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintLeft_toRightOf="@id/progress2"
        app:layout_constraintTop_toTopOf="@id/progress2"
        />


    <ProgressBar
        android:id="@+id/progress3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"

        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress2"
        />

    <TextView
        android:id="@+id/tv_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintLeft_toRightOf="@id/progress3"
        app:layout_constraintTop_toTopOf="@id/progress3"
        />


    <TextView
        android:id="@+id/tv_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:padding="10dp"
        android:background="#fff00000"

        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/progress3"
        />

    <TextView
        android:id="@+id/tv_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="remove"
        android:padding="10dp"
        android:background="#fff00000"

        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_clear"
        />
</android.support.constraint.ConstraintLayout>
