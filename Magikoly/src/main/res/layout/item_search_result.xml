<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.glt.magikoly.view.RoundedImageView
        android:id="@+id/riv_search_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_error_holder"
        android:layout_width="54dp"
        android:visibility="gone"
        android:layout_height="48dp"
        android:src="@drawable/img_placeholder_failed1"
        app:layout_constraintBottom_toBottomOf="@id/riv_search_result"
        app:layout_constraintLeft_toLeftOf="@id/riv_search_result"
        app:layout_constraintRight_toRightOf="@id/riv_search_result"
        app:layout_constraintTop_toTopOf="@id/riv_search_result"/>

</android.support.constraint.ConstraintLayout>