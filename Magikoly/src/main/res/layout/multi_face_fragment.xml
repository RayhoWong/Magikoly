<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#f3f3f3"
        android:clickable="true"
        android:focusable="true">



    <com.glt.magikoly.function.views.MultiFaceImageView
            android:id="@+id/img_image_faces"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="80dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_multi_faces_desc"/>

    <TextView
            android:id="@+id/tv_multi_faces_desc"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/multi_face_desc"
            android:gravity="center"
            android:textColor="@color/multi_face_text_desc"
            android:fontFamily="sans-serif-medium"
            android:textSize="15sp"
            android:paddingLeft="48dp"
            android:paddingStart="48dp"
            android:paddingRight="48dp"
            android:paddingEnd="48dp"
            app:layout_constraintTop_toBottomOf="@+id/img_image_faces"/>


    <include layout="@layout/include_face_common_toolbar"/>

</android.support.constraint.ConstraintLayout>