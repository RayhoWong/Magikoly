<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_subscribe_entrance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3FFFFFF"
    android:visibility="visible"
    app:layout_constraintBottom_toTopOf="@id/bottom_bar"
    app:layout_constraintTop_toTopOf="parent"
    >

    <ImageView
        android:id="@+id/purchase_img_bg"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/subcribe_vip_banner_test"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/purchase_img_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_back_black_selector"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_extra_function"
        android:layout_width="255dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/purchase_watch_ad_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_purple_line_bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

            <TextView
                android:id="@+id/tv_watch_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/layout_purchase_watch_video"
                android:textColor="#5D6BF5"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_watch_video_desc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"/>

            <TextView
                android:id="@+id/tv_watch_video_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/layout_purchase_one_time_access"
                android:textColor="#5D6BF5"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_watch_video_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/purchase_back_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_purple_line_bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

            <TextView
                android:id="@+id/tv_back_home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchase_backhome_title"
                android:textColor="#5D6BF5"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_back_home_desc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"/>

            <TextView
                android:id="@+id/tv_back_home_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchase_backhome_subtitle"
                android:textColor="#5D6BF5"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_back_home_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </android.support.constraint.ConstraintLayout>



    </android.support.constraint.ConstraintLayout>




    <ImageView
        android:id="@+id/purchase_cover_img"
        android:layout_width="192dp"
        android:layout_height="168dp"
        android:visibility="visible"
        android:src="@drawable/img_layout_purchase_lock"
        app:layout_constraintBottom_toTopOf="@id/cl_extra_function"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>


    <TextView
        android:id="@+id/purchase_content_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="@string/layout_purchase_upgrade_full_version"
        android:textColor="#6e6d70"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/cl_extra_function"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/purchase_cover_img"
        app:layout_constraintWidth_percent="0.7"/>

</android.support.constraint.ConstraintLayout>