<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_menu_animalpage"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:background="@drawable/item_animal_popup_top_bg_selector"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:src="@drawable/icon_video_animalpage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"

                android:fontFamily="sans-serif-medium"
                android:text="@string/video"
                android:textColor="#20107c"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f6f6f6" />

        <LinearLayout
            android:id="@+id/gif"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/item_animal_popup_bottom_bg_selector"
            >

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginLeft="10dp"

                android:src="@drawable/icon_gif_animalpage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"

                android:fontFamily="sans-serif-medium"
                android:text="@string/gif"
                android:textColor="#20107c"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>