<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_video_course_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.glt.magikoly.function.main.videocourse.CoverScalableVideoView
        android:id="@+id/tv_video_course"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="9:7"/>

    <ImageView
        android:id="@+id/face_video_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/face_video_cancel"
        app:layout_constraintBottom_toTopOf="@id/tv_video_course"
        app:layout_constraintRight_toRightOf="@id/tv_video_course"
        android:layout_margin="16dp" />

</android.support.constraint.ConstraintLayout>